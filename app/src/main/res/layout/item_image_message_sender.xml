<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/image_message_layout_sender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="4dp"
        android:background="@color/white">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/img_image_message_sender"
            android:layout_width="256dp"
            android:layout_height="wrap_content"
            android:contentDescription="@string/app_name"
            android:adjustViewBounds="true"
            android:src="@drawable/ic_blank_image"
            android:scaleType="fitCenter"
            app:riv_corner_radius="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_image_message_time_sender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:text="12:12pm"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/_grey"
            android:textSize="10sp"
            app:layout_constraintEnd_toEndOf="@+id/img_image_message_sender"
            app:layout_constraintTop_toBottomOf="@+id/img_image_message_sender" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>